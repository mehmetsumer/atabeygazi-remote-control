<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:background="@drawable/background">


    <RelativeLayout
        android:id="@+id/line_1"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_far"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="FARLAR" />

        <ImageView
            android:id="@+id/bt_headlights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/headlights_off"
            android:layout_below="@+id/tv_far"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2.SATIR"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_2"
            android:layout_marginStart="10dp"
            android:src="@drawable/headlights_off" />

    </RelativeLayout>


     <!--<ToggleButton
        android:id="@+id/bt_headlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_far"
        android:text="FARLAR"/> -->

    <ImageView
        android:id="@+id/img_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bluetooth_searching"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_status"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20dp"
        android:text="Bağlantı Başarılı"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>