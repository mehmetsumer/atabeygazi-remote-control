<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/atabeyBlue</item>
        <item name="colorAccent">@color/atabeyRed</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnim</item>
        <item name="android:fontFamily">@font/gothic</item>
    </style>
    <style name="CustomActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="AppTheme.WhiteAccent">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    <style name="AppTheme.DarkGrey">
        <item name="colorAccent">@color/darkGrey</item>
    </style>
</resources>
